# Application Settings
APP_ENV=production
APP_DEBUG=false

# Database Configuration
DB_DRIVER=sqlite
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=sitemap
DB_USERNAME=sitemap
DB_PASSWORD=sitemap

# SQLite (alternative)
DB_SQLITE_PATH=./sitemap.db

# Cache Configuration
CACHE_DRIVER=file
CACHE_TTL=3600

# Redis Cache (if using redis)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
RATE_LIMIT_DELAY=0

# JavaScript Rendering
JAVASCRIPT_ENABLED=false
CHROME_PATH=/usr/bin/chromium
CHROME_PORT=9222
AJAX_TIMEOUT=5000

# Proxy Configuration
PROXY_ENABLED=false
PROXY_URL=
PROXY_FILE=
PROXY_ROTATE=false

# Webhook Configuration
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_NOTIFY_COMPLETE=true
WEBHOOK_NOTIFY_ERROR=true

# Logging
LOG_LEVEL=info
LOG_PATH=./logs
LOG_MAX_FILES=30

# Performance
MAX_CONCURRENT_REQUESTS=10
MAX_PAGES=10000
MAX_DEPTH=5
CHECKPOINT_INTERVAL=1000

# Output
OUTPUT_PATH=./output
PUBLIC_BASE_URL=

# Features
ENABLE_CACHE=true
ENABLE_DATABASE=true
ENABLE_CHANGE_DETECTION=true
ENABLE_SEO_ANALYSIS=false
ENABLE_QUALITY_CHECK=false
ENABLE_IMAGE_SITEMAP=false
ENABLE_VIDEO_SITEMAP=false
ENABLE_NEWS_SITEMAP=false

# Filtering
EXCLUDE_PATTERNS=/admin/*,/test/*,*.pdf
INCLUDE_PATTERNS=
PRIORITY_RULES={}

# Scheduler
SCHEDULER_ENABLED=false
SCHEDULER_FILE=./schedules.json

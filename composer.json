{
  "name": "iprodev/sitemap-generator-pro",
  "description": "A professional PHP XML sitemap generator (library + CLI tool) with concurrency, robots.txt respect, and sitemap index support.",
  "type": "library",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "IProDev\\Sitemap\\": "src/"
    }
  },
  "bin": [
    "bin/sitemap"
  ],
  "require": {
    "php": ">=8.0",
    "guzzlehttp/guzzle": "^7.8",
    "psr/log": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "squizlabs/php_codesniffer": "^3.9"
  },
  "scripts": {
    "test": "phpunit",
    "lint": "phpcs --standard=PSR12 src/ tests/"
  }
}

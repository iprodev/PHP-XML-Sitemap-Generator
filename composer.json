{
  "name": "iprodev/sitemap-generator-pro",
  "description": "A professional, production-ready PHP XML sitemap generator (library + CLI) with concurrency, robots.txt support, logging, comprehensive error handling, and sitemap index support.",
  "type": "library",
  "keywords": [
    "sitemap",
    "xml",
    "seo",
    "crawler",
    "spider",
    "web-crawler",
    "sitemap-generator",
    "robots-txt",
    "concurrent"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "iprodev",
      "homepage": "https://github.com/iprodev"
    }
  ],
  "homepage": "https://github.com/iprodev/sitemap-generator-pro",
  "support": {
    "issues": "https://github.com/iprodev/sitemap-generator-pro/issues",
    "source": "https://github.com/iprodev/sitemap-generator-pro"
  },
  "autoload": {
    "psr-4": {
      "IProDev\\Sitemap\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IProDev\\Sitemap\\Tests\\": "tests/"
    }
  },
  "bin": [
    "bin/sitemap"
  ],
  "require": {
    "php": ">=8.0",
    "ext-curl": "*",
    "ext-xml": "*",
    "ext-mbstring": "*",
    "ext-zlib": "*",
    "guzzlehttp/guzzle": "^7.8",
    "psr/log": "^1.1 || ^2.0 || ^3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6 || ^10.0",
    "squizlabs/php_codesniffer": "^3.9",
    "monolog/monolog": "^2.0 || ^3.0"
  },
  "suggest": {
    "monolog/monolog": "For advanced logging capabilities"
  },
  "scripts": {
    "test": [
      "@phpunit"
    ],
    "phpunit": "phpunit --colors=always",
    "test-coverage": "phpunit --coverage-html coverage --coverage-text",
    "lint": [
      "@phpcs"
    ],
    "phpcs": "phpcs --standard=PSR12 src/ tests/",
    "phpcbf": "phpcbf --standard=PSR12 src/ tests/",
    "check": [
      "@lint",
      "@test"
    ]
  },
  "scripts-descriptions": {
    "test": "Run all PHPUnit tests",
    "test-coverage": "Run tests with coverage report",
    "lint": "Check code style with PHP_CodeSniffer",
    "phpcbf": "Fix code style issues automatically",
    "check": "Run both linting and tests"
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "preferred-install": "dist"
  }
}
